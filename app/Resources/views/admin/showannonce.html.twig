    <h2>Voir mon annonce</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Image</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Vendeur</th>
                <th>Date</th>
                <th>Heures</th>
                <th>Telephone</th>
                <th>Categorie</th>
                <th>Localite</th>
            </tr>
        </thead>
        <tbody>
